{
  "extends": "@phts",
  "env": {
    "es6": true
  },

  "overrides": [
    {
      "files": ["scripts/*"],
      "env": {
        "node": true
      }
    },
    {
      "files": ["src/*"],
      "env": {
        "browser": true
      },
      "globals": {
        "browser": true
      },
      "rules": {
        "strict": ["error", "global"]
      }
    }
  ]
}
